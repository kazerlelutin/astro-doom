---
import { WP_categories } from '../types/post.type'
import HTMLDecoderEncoder from 'html-encoder-decoder'

type Props = {
  categories: WP_categories
}
const { categories } = Astro.props as Props
---

<div class="container">
  {
    categories?.nodes?.map((cat) => (
      <a href={`/machine/${cat.slug}`} rel="prefetch" class="categorie">
        {HTMLDecoderEncoder.decode(cat.name)}
      </a>
    ))
  }
</div>

<style>
  .container {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .categorie {
    background: hsl(
      var(--color-blue-hue),
      var(--color-blue-sat),
      var(--color-blue-light)
    );
    color: white;
    padding: 5px;
    border-radius: 5px;
    font-size: 0.9em;
    transition: 200ms ease-in-out;
    cursor: pointer;
    text-transform: lowercase;
  }

  .categorie:hover {
    background: hsl(
      var(--color-red-hue),
      var(--color-red-sat),
      var(--color-red-light)
    );
  }
</style>
