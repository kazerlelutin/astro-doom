---
import { MetasProps } from "../types/metasProps";

const { title, img, path, description } = Astro.props as MetasProps

const defaultDescription =
    "The https://noscreenwithoutdoom.art project is to do a press review of all possible ports of DOOM, and maybe encourage even more releases.",
  baseUrl = "https://www.noscreenwithoutdoom.art/",
  baseTitle = "No ðŸ“º without DOOM"
---

<head>
  <title>
    {title && `${title} | `}
    {baseTitle}
  </title>
  <link rel="icon" href="/favicon.ico" />
  <link rel="stylesheet" href="/styles/globals.css" />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <meta
    property="og:title"
    content={title ? `${title} | ` + baseTitle : baseTitle}
  />
  <meta property="og:image" content={img || `${baseUrl}doom-bg.jpg`} />
  <meta property="og:url" content={`${baseUrl}${path}`} />
  <meta property="og:image:type" content="image/webp" />
  <meta property="og:image:alt" content={title} />
  <meta property="og:type" content="article" />
  <meta property="og:description" content={description || defaultDescription} />
  <meta name="twitter:card" content="photo" />
  <meta name="twitter:site" content={baseUrl} />
  <meta
    name="twitter:title"
    content={title ? `${title} | ` + baseTitle : baseTitle}
  />
  <meta
    name="twitter:description"
    content={description || defaultDescription}
  />
  <meta name="twitter:image" content={img || `${baseUrl}doom-bg.jpg`} />
  <meta name="twitter:url" content={`${baseUrl}${path}`} />
</head>
